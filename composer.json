{
    "name": "ore00/secure-jwt",
    "type": "project",
    "description": "Laravel project with JWT authentication",
    "version": "1.0.0",
    "keywords": [
        "laravel",
        "framework",
        "jwt",
        "authentication",
        "docker"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Linda McGraw",
            "email": "linda.mcgraw@me.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.9",
        "tymon/jwt-auth": "^2.0",
        "laravel/tinker": "^2.9",
        "guzzlehttp/guzzle": "^7.0",
        "barryvdh/laravel-debugbar": "^3.8",
        "doctrine/dbal": "^3.0",
        "spatie/laravel-activitylog": "^4.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.20",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate || echo 'Skipping key:generate as artisan is unavailable until the app is running.'"
        ],
        "post-install-cmd": [
            "./wait-for-it.sh laravel_db:3306 -- php artisan migrate --force || echo 'Skipping migrations as artisan is unavailable until the app is running.'"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
             "./wait-for-it.sh laravel_db:3306 -- php artisan migrate --force || echo 'Skipping migrations as artisan is unavailable until the app is running.'"
        ],
        "docker-artisan-key": [
            "@php artisan key:generate --ansi"
        ],

        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
